<!-- MainWindow.xaml -->
<Window x:Class="HydraDragonAntivirusGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hydra Dragon Antivirus" Height="360" Width="560" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Background="#0B1220" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="12" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="Hydra Dragon Antivirus" FontSize="20" FontWeight="Bold" Foreground="#A5F3FC" HorizontalAlignment="Center" />

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Default unprotected GIF, will be changed in code-behind if launcher is running -->
                <Border Grid.Column="0" Background="#071018" CornerRadius="6" Padding="8" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="imgProtection" Width="160" Height="160" Stretch="Uniform"
                           Source="hydra_unprotected.gif" />
                </Border>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock x:Name="txtStatus" Text="Checking protection..." FontSize="16" FontWeight="SemiBold" Foreground="#E6EEF5" />
                    <TextBlock TextWrapping="Wrap" Margin="0,8,0,0" Foreground="#94A3B8" x:Name="txtAbout">
                        Hydra Dragon Antivirus is an open-source (FOSS), business-level product providing a modern, advanced EDR (Endpoint Detection and Response) architecture.
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
